<main class="contenido">
    <div class="wave wave_arriba"></div>
    <h2 class="contenido__titulo">Los mejores jugadores!</h2>
    <table class="tabla tabla__jugadores">
        <thead class="tabla__cabecera">
            <tr>
                <th>TOP</th>
                <th>NOMBRE</th>
                <th>PUNTAJE MAXIMO</th>
                <th>NIVEL</th>
            </tr>
        </thead>
        <tbody class="tabla__contenedor">

            {{#usuariosTop}}
                <tr>
                    <td>{{top}}</td>
                    <td><a href="/quizquest/perfil/showPerfil/?id={{id_usuario}}">{{nombrerUsuario}}</a></td>
                    <td>{{max_puntaje}}</td>
                    <td style="font-weight:bold">{{nivel}}</td>
                </tr>
            {{/usuariosTop}}

            {{#usuarioDatos}}
                <tr class="jugador__tu">
                    <td>{{top}}</td>
                    <td>{{nombrerUsuario}}</td>
                    <td>{{max_puntaje}}</td>
                    <td style="font-weight:bold">{{nivel}}</td>
                </tr>
            {{/usuarioDatos}}


            {{^usuarioDatos}}
                <tr class="jugador__tu">
                    <td colspan=4>
                        No te estas en el top (juega minimo 1 partida)
                    </td>
                </tr>
            {{/usuarioDatos}}

        </tbody>
    </table>
