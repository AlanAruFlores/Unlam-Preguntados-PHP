<!--Sugerir Pregunta-->
<div class="popup crear__pregunta" id="crear__pregunta__ventana">
    <a href="#" class="popup__button popup__cerrar" id="cerrar__pregunta__ventana"><i class="fa-solid fa-xmark"></i></a>
    <h2 class="popup__titulo">Sugiere una pregunta!</h2>
    <form class="popup__formulario" action="/quizquest/lobbyusuario/suggestNewQuestion" method="POST">
        <h3 class="popup__subtitulo">Nueva pregunta</h3>
        <label>Pregunta</label>
        <input type="text" name="descripcionPregunta" id="descripcionPregunta" required>
        <label>Tipo de pregunta</label>
        <select name="preguntaCategoriaId" required>
                <option value="1">Cultura</option>
                <option value="2">Ciencia</option>
                <option value="3">Entretenimiento</option>
                <option value="4">Deportes</option>
                <option value="5">Geografia</option>
                <option value="6">Historia</option>        
       </select>

       <label>Cantidad de Respuestas</label>
       <select id="cantidad_preguntas" name="cantidadPreguntas" required>
            <option value="2">2</option>
            <option value="3">3</option>                     
            <option value="4">4</option>
       </select>

       <label>Posibles respuestas</label>
       <div id="posibles_respuestas">
       </div>
        <button type="submit" class="popup__boton boton__formulario">Sugerir Pregunta</button>
    </form>
</div>
<script>
  localStorage.clear();
</script>
